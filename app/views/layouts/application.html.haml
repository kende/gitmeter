!!!5
%html
  %head
    %title Gitmeter
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %article
      %nav
        - if current_user
          Logged in as 
          = current_user.email
          = link_to "Log out", logout_path
        - else
          = link_to "Sign up", signup_path
          or
          = link_to "log in", login_path
      = yield
